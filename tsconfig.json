{
  "compilerOptions": {
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "es2019",
    "module": "CommonJS",
    "outDir": "./.build",
    "strict": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
    }
  },
  "include": [
    "functions/*.ts",
    "api/*.ts",
    "api/**/*.ts",
    "db/*.ts",
    "db/**/*.ts",
    "config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
